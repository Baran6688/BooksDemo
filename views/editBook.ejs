<%- layout('layout/boiler') %>
    <% const options={ year: "numeric" , month: "numeric" , day: "numeric" } %>

        <div>
            <% const Year=date.getFullYear() %>
                <%const editMonth=date.getMonth() + 1 %>
                    <% const Month=editMonth.toString().padStart(2,'0') %>
                        <% const Day=date.getDate().toString().padStart(2,'0') %>
        </div>
        <form action="/edit/<%= id %>?_method=patch" method="post">
            <%= Year %>-<%=date.getMonth()+1%>-<%= Day%>
                        <label for="name">Name: </label>
                        <input type="text" name="name" id="name" value="<%= name %>">
                        <label for="Author">Author: </label>
                        <input type="text" name="author" id="Author" value="<%= author %>">
                        <label for="date">Date: </label>
                        <input type="date" name="date" id="date" value="<%=Year%>-<%=Month%>-<%=Day%>">
                        <label for="pages">Pages</label>
                        <input type="number" id="pages" name="pages" value="<%=pages %>">
                        <button type=" submit">Submit</button>
        </form>