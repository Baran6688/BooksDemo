<% const options={ year: "numeric" , month: "short" , day: "numeric" } %>
    <%- layout('layout/boiler') %>





        <div class="uk-cover-container">

            <div class="uk-height-medium uk-flex uk-flex-center uk-flex-middle uk-background-cover uk-light"
                data-src="https://wallpaperaccess.com/full/7351370.jpg" uk-img="loading: eager">
                <h1>
                    <%= name %>
                </h1>
            </div>



            <article class="uk-article">

                <h1 class="uk-article-title">
                    <%= name %>
                </h1>

                <p class="uk-article-meta">Written by <a href="#">
                        <%= author %>
                    </a>
                    <%= date.toLocaleString('en-US',options) %>
                </p>

                <p class="uk-text-lead">
                    <%= description %>
                </p>
                <p>
                    Posted By <%= user.name %> at <%= datePosted.toLocaleString('en-US',{...options, hour: "numeric" ,
                            minute:"numeric" }) %>
                </p>



            </article>



            <div class="uk-margin-small-top">
                <form action="/delete/<%=id%>?_method=delete" method="post">
                    <a class="uk-button uk-button-primary" href="/">Back</a>
                    <a class=" uk-button uk-button-primary" href="/edit/<%= id %>">Edit</a>
                    <button class="uk-button uk-button-primary" type="submit">Delete</button>

                </form>

            </div>
        </div>